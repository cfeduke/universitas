.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", users_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_user_path(resource)
  .content
    %h2.title= "#{t("web-app-theme.edit", :default => "Edit")} User"
    .inner
      - form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => :form }) do |f|
        = devise_error_messages!
        .group
          = f.label :login, t("activerecord.attributes.user.login", :default => "Login"), :class => :label
          = f.text_field :login, :class => 'text_field'
        .group
          = f.label :name, t("activerecord.attributes.user.name", :default => "Name"), :class => :label
          = f.text_field :name, :class => 'text_field'
        .group
          = f.label :email, t("activerecord.attributes.user.email", :default => "Email"), :class => :label
          = f.text_field :email, :class => 'text_field'
        .group
          = f.label :password, t("activerecord.attributes.user.password", :default => "Password"), :class => :label
          = f.password_field :password, :class => 'text_field'
          %span.description (leave blank if you don't want to change it)
        .group
          = f.label :password_confirmation, t("activerecord.attributes.user.password_confirmation", :default => "Password Confirmation"), :class => :label
          = f.password_field :password_confirmation, :class => 'text_field'
        .group
          = f.label :current_password, t("activerecord.attributes.user.current_password", :default => "Current Password"), :class => :label
          = f.password_field :current_password, :class => 'text_field'
          %span.description (we need your current password to confirm your changes)
        %br      
        .group.navform.wat-cf
          %button.button{:type => 'submit'}
            = image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.update", :default => "Update")}") 
            = t("web-app-theme.update", :default => "Update")
          = link_to "#{t("web-app-theme.back", :default => "Back")}", user_path(resource), :class => "button"     
      %br
        	
      = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete

- #content_for :sidebar, render(:partial => 'sidebar')
