.content
  %h2.title 
    = t('documents.documents_for')
    = @user.name
  .inner
    - unless collection.blank?
      %table.table
        %tr
          %th.first
          %th= t('documents.name')
          %th.last= t('documents.description')
        - collection.each do |resource|
          %tr{:class => cycle("odd","even")}
            %td.first= link_to t('shared.edit'), edit_resource_url(resource), :class => "button" 
            %td= link_to resource, resource.file_url, :title => t('shared.click_to_download')
            %td= resource.description
    -else
      %p=t('users.documents.uploaded.blank')
    