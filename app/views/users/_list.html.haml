%ul.list
  - users.each do |user|
    %li
      .left= link_to(gravatar_for(user), user)
      .item
        %h3= link_to user.name, user
        - unless user == current_user || !user_signed_in?
          - if current_user.following?(user)
            %p= link_to t('users.unfollow'), unfollow_user_path(user), :method => :delete 
          - else
            %p= link_to t('users.follow'), follow_user_path(user), :method => :post