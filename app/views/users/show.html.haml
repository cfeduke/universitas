.block
  .secondary-navigation
    %ul.wat-cf
  .content
    %h2.title= resource.name
    .inner
      %p
        %strong= "#{t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email"))} :"
        =@user.email
        
      %p= link_to "Follow this user", follow_user_path(resource) unless resource == current_user || !user_signed_in? || current_user.following?(resource)
      
      .wat-cf
        = link_to "#{t("web-app-theme.edit", :default=> "Edit")}", edit_user_path, :class => "button" if resource == current_user
- content_for :sidebar, render(:partial => 'sidebar')
