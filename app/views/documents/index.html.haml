.block
  = render :partial => 'shared/breadcrumbs', :locals => {:parent => @course}
  .content
    %h2.title 
      = t('documents.documents_for')
      = @course.name
    .inner
      %table.table
        %tr
          %th.first
          %th= t('documents.name')
          %th.last= t('documents.description')
        - collection.each do |resource|
          %tr{:class => cycle("odd","even")}
            %td.first
            %td= link_to resource, resource_path(resource)
            %td= resource.description
      