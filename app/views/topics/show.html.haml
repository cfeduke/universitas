.content
  %h2.title= resource.title
  .inner
    %ul.list
      = nested_posts(@posts.arrange(:order => :created_at))
    #in-reply-to.none
      %h3=t('posts.in_reply_to')
      .flash
        .message.box
          %p.left
          .left.spaced-top
            =link_to_icon :remove, t('shared.cancel'), 'javascript:void(0)', :id => "cancel-reply"
          %br.clear
    %h3#reply=t('posts.reply')
    = form_tag group_forum_topic_posts_path(parent.group, parent, resource), :class => 'form' do
      = hidden_field_tag 'parent_id', ''
      = text_area_tag :text, '', :class => 'reply'
      .left
        = submit_button do
          = image_tag("icons/tick.png", :alt => t('shared.submit')) 
          = t('posts.post')
      .right
        = textile_guide
    %br.clear